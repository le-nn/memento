{
    "metadata": [
        {
            "src": [
                {
                    "src": "./src",
                    "files": [
                        "**/*.csproj"
                    ]
                }
            ],
            "dest": "api"
        }
    ],
    "build": {
        "content": [
            {
                "files": [
                    "**/*.{md,yml}"
                ],
                "exclude": [
                    "artifacts/_site/**"
                ]
            }
        ],
        "resource": [
            {
                "files": [
                    "**/Assets/**"
                ]
            }
        ],
        "output": "artifacts/_site",
        "template": [
            "default",
            "modern"
        ],
        "globalMetadata": {
            "_appName": "Memento",
            "_appTitle": "Memento",
            "_enableSearch": true,
            "pdf": false
        }
    }
}